        // App badge section
        section#download.bg-gradient-primary-to-secondary
            .container.px-5
                h2.text-center.text-white.font-alt.mb-4
                    | 다코미 앱 다운받기
                .d-flex.flex-column.flex-lg-row.align-items-center.justify-content-center(onClick='alert("10월 앱 오픈 예정입니다.")')
                    a.me-lg-3.mb-4.mb-lg-0(href='')
                        img.app-badge(src='assets/img/google-play-badge.svg', alt='구글 플레이 스토어')
                    a(href='')
                        img.app-badge(src='assets/img/app-store-badge.svg', alt='애플 앱스토어')

        // Footer
        footer.bg-black.text-center.py-5
            .container.px-5
                .text-white-50.small
                    .mb-2 &copy; 2021 Volla, Inc. All Rights Reserved.
